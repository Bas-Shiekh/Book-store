{
  "name": "book-store",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon ./server/index.ts",
    "start": "cross-env NODE_ENV=production ts-node ./server/index.ts",
    "test": "cross-env NODE_ENV=test jest --runInBand server/__test__/",
    "test:watch": "jest --watch server/__test__/",
    "build": "tsc",
    "dbBuild": "cross-env NODE_ENV=production ts-node ./server/database/build.ts",
    "dbSeed": "cross-env NODE_ENV=development ts-node ./server/database/build.ts",
    "lint": "eslint --ext .ts server/",
    "lint-fix": "eslint --ext .ts server/ --fix && cd client && npm run lint-fix",
    "lint:client": "cd client && npm run lint",
    "format-client": "cd client && npm run format"
  },
  "pre-commit": [
    "format-client",
    "test",
    "lint-fix",
    "lint",
    "lint:client"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bas-Shiekh/Book-store.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Bas-Shiekh/Book-store/issues"
  },
  "homepage": "https://github.com/Bas-Shiekh/Book-store#readme",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.5",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "eslint": "^8.46.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "pre-commit": "^1.2.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.40.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.2",
    "sequelize": "^6.32.1"
  }
}
